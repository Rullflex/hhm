extends modules/layout/_layout

prepend head
	title Honey Hunters Test App
	meta(name="description", content="Honey Hunters Test App")

block header 
	header.header
		.container 
			.row.header__row
				.col-5.col-lg-3
					a(href="/").header__logo
						+picture(png, `${assets}logo`, 'n').header__logo-img

block content
	main.main
		section.s1 
			.container 
				.row.justify-content-center
					.col-5.col-lg-3
						+picture(png, `${assets}contact-icon`, 'n').s1__contact-icon
				form.form
					.row.justify-content-between
						.col-12.col-lg-5
							.input-wrap 
								label(for="input-name").form__label Имя #[span.form__star *]
								input.form__input.form__input--first.input(id="input-name" type="text" name="Имя")
							.input-wrap 
								label(for="input-email").form__label E-mail #[span.form__star *]
								input.form__input.input(id="input-email" type="email" name="email")
						.col-12.col-lg-6
							.input-wrap 
								label(for="input-comment").form__label Комментарий #[span.form__star *]
								textarea.form__textarea.input(id="input-comment" name="comment")
					.row.justify-content-end
						.col
							button.btn.btn-solid-primary.form__btn(type="submit") Записать
		section.s2 
			.container 
				.row 
					.col 
						h2.s2__title Выводим комментарии
				.row#cards-load 
					

block footer
	footer.footer
		.container 
			.row.footer__row
				.col-5.col-lg-3
					a(href="/").footer__logo
